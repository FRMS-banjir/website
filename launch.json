{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node", // Type of environment, for example, "node" for Node.js, "python" for Python, etc.
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/app.js", // Path to the file to run
            "cwd": "${workspaceFolder}", // Working directory
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        }
    ]
}
